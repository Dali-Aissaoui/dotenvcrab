{
  "PORT": { "type": "number", "required": true },
  "DEBUG": { "type": "boolean", "required": true },
  "ENV": {
    "type": "enum",
    "required": true,
    "values": ["dev", "staging", "production"]
  },
  "LOG_LEVEL": {
    "type": "enum",
    "values": ["debug", "info", "warn", "error"],
    "default": "info"
  }
}
